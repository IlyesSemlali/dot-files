#!/bin/bash

function high () {
    sed -i '/^font/,/^colors/s/\ \ size:\ 9/\ \ size: 12/' ~/.config/alacritty/alacritty.yml
    git -C ~ update-index --assume-unchanged
}

function low () {
    sed -i '/^font/,/^colors/s/\ \ size:\ ../\ \ size: 9/' ~/.config/alacritty/alacritty.yml
    git -C ~ update-index --assume-unchanged
}

case $1 in
    high|low)
        $1
        ;;

    *)
        exit 1
        ;;
esac
