#!/bin/bash


OUTPUT_STATE=~/.cache/headset.state
STATE=~/.cache/volume.state

SPEAKER_VOLUME=65
HEADSET_VOLUME=45

function notify () {
    if ! [[ $NOTIFY == "false" ]]
    then
        notify-send -t 1000 -i audio-volume-high Volume "" --hint="int:value:$1"
    fi
}

function set_absolute () {
    amixer set Master unmute ${1}%
    save_volume
    notify $1
}

function get_volume () {
    amixer sget Master | grep -o '\[[0-9]\+%\]' | sed 's/]//;s/\[//;s/%//' | head -1
}

function save_volume () {
    get_volume > $STATE
}

function pause () {
    amixer set Master 0%
    microphone pause
    if ! [[ $NOTIFY == "false" ]]
    then
        notify-send -t 1000 -i audio-volume-muted Volume ""
    fi
}

function mute () {
    pause
    save_volume
}

function resume_from_state () {
    set_absolute $(cat ${STATE})
}

function decrease () {
    amixer set Master 5%-
    save_volume
    notify $(get_volume)
}

function increase () {
    amixer set Master unmute 5%+
    NOTIFY=false microphone resume
    save_volume
    notify $(get_volume)
}

function min () {
    if grep -q 'analog-output-speaker' $OUTPUT_STATE
    then
        set_absolute $( echo $SPEAKER_VOLUME ' * 3 / 4 ' | bc )
    else
        set_absolute $( echo $HEADSET_VOLUME ' * 3 / 4 ' | bc )
    fi
    NOTIFY=false microphone resume
}

function max () {
    if grep -q 'analog-output-speaker' $OUTPUT_STATE
    then
        set_absolute $SPEAKER_VOLUME
    else
        set_absolute $HEADSET_VOLUME
    fi
    NOTIFY=false microphone resume
}

case $1 in
    pause|mute|decrease|increase|min|max)
        $1
        ;;
    resume)
        resume_from_state
        ;;
    set_absolute)
        $1 $2
        ;;
    *)
        exit 1
        ;;
esac
