#!/bin/bash

cat ~/.secrets/keepass | keepassxc --keyfile ~/.secrets/keepass.key --pw-stdin ~/Documents/ilyes_semlali.kdbx &

while [ -z $WINDOW_ID ]
do
    WINDOW_ID=$(wmctrl -l | grep ' - KeePassXC$' | awk '{print $1}')
done

xprop -id $WINDOW_ID -f WM_WINDOW_ROLE 8u -set WM_WINDOW_ROLE KeepassMainWindow
