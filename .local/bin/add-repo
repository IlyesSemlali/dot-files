#!/usr/bin/env bash

GITREPOS="$HOME/git/"

WORKTREE=$(find "$GITREPOS" -maxdepth 2 -mindepth 1 -type d | sort | fzf --border-label='Repositories')

if [ -z $PROJECT ]; then
  echo "PROJECT is not set"
  exit 1
else
  git -C $WORKTREE worktree add "$HOME/projects/$PROJECT/$(basename $(echo $WORKTREE))" -B $PROJECT
fi
